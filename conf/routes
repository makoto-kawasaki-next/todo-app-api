# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                             controllers.HomeController.index
GET     /todo/list                    controllers.todo.TodoController.list
GET     /todo/add                     controllers.todo.TodoController.add
POST    /todo/store                   controllers.todo.TodoController.store
GET     /todo/$id<[0-9]+>/edit        controllers.todo.TodoController.edit(id: Long)
POST    /todo/$id<[0-9]+>/update      controllers.todo.TodoController.update(id: Long)
POST    /todo/delete                  controllers.todo.TodoController.delete()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                 controllers.Assets.versioned(path="/public", file: Asset)

# APIç”¨URL
GET     /api/v1/category/list                controllers.api.v1.todoCategory.TodoCategoryController.list
GET     /api/v1/status/list                  controllers.api.v1.todoStatus.TodoStatusController.list

GET     /api/v1/todo/list                    controllers.api.v1.todo.TodoController.list
POST    /api/v1/todo/store                   controllers.api.v1.todo.TodoController.store
GET     /api/v1/todo/$id<[0-9]+>             controllers.api.v1.todo.TodoController.get(id: Long)
PUT     /api/v1/todo/$id<[0-9]+>             controllers.api.v1.todo.TodoController.update(id: Long)
DELETE  /api/v1/todo/$id<[0-9]+>             controllers.api.v1.todo.TodoController.delete(id: Long)
